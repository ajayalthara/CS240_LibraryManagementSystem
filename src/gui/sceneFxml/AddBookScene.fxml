<AnchorPane prefHeight="600" prefWidth="700" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.AddBookSceneController">
   <children>
      <ImageView fitHeight="281.0" fitWidth="502.0" layoutX="195.0" layoutY="314.0" opacity="0.08" pickOnBounds="true">
         <image>
            <Image url="@../images/WaterMark.jpg" />
         </image>
      </ImageView>
      <Button layoutX="485.0" layoutY="394.0" mnemonicParsing="false" onAction="#loadHomePage" text="Home Screen" />
      <Button layoutX="299.0" layoutY="394.0" mnemonicParsing="false" onAction="#saveToCentralDb" text="Save in Central DB" />
      <Button fx:id="addBookSubmit" alignment="CENTER" contentDisplay="CENTER" layoutX="150.0" layoutY="394.0" mnemonicParsing="false" onAction="#addBookSubmit" text="Add Book" />
      <GridPane alignment="CENTER" layoutX="100.0" layoutY="250.0" prefHeight="100.0" prefWidth="500.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="237.0" minWidth="10.0" prefWidth="153.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="323.0" minWidth="10.0" prefWidth="323.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="300.0" text="Book Title">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER" graphicTextGap="0.0" lineSpacing="5.0" prefHeight="38.0" prefWidth="176.0" text="Author" GridPane.rowIndex="1">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="300.0" text="Genre" GridPane.rowIndex="2">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="titleText" prefHeight="25.0" prefWidth="292.0" GridPane.columnIndex="1">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="authorText" prefHeight="25.0" prefWidth="292.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="genreText" prefHeight="25.0" prefWidth="292.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </GridPane>
   </children>
</AnchorPane>
